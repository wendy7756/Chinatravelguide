---
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import siteData from "@config/siteData.json";
import { Icon } from "astro-icon/components";

import FooterLink from "./FooterLink.astro";

const today = new Date();
---

<footer class="bg-base-100/40 mt-12 flex flex-col items-center justify-center py-8">
	<div class="site-container">

		<!-- lets connect -->
		<div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
			<p>
				<span class="italic">Let's connect!</span>
				<a
					href="https://t.me/ChinaTravelwendy"
					target="_blank"
					rel="noopener noreferrer"
					class="text-primary-600 hover:underline ml-1"
				>
					Join Telegram
				</a>
				for more travel tips and stories.
			</p>
		</div>

		<!-- github star -->
		<div class="flex justify-center items-center mt-4 gap-4">
			<a
				href="https://github.com/wendy7756/globaltravelguide"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-2 px-4 py-2 bg-base-900 text-white hover:bg-base-800 rounded-md transition-colors duration-200"
				title="Star this project on GitHub"
			>
				<Icon name="socials/mdi-github" class="w-5 h-5"/>
				<span class="text-sm font-medium">Star on GitHub</span>
			</a>
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			&copy; {today.getFullYear()} by
			<a
				class="hover:text-primary-600 transition"
				target="_blank"
				rel="noopener"
			>
				WENDY
			</a>
		</div>
	</div>
</footer>
