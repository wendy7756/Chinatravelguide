---
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import siteData from "@config/siteData.json";
import { Icon } from "astro-icon/components";

import FooterLink from "./FooterLink.astro";

const today = new Date();
---

<footer class="bg-base-100/40 mt-12 flex flex-col items-center justify-center py-8">
	<div class="site-container">

		<!-- welcome message -->
		<div class="description mx-auto mt-6 max-w-[32rem] px-4 text-center">
			<p class="text-base-600 leading-relaxed">
				欢迎来中国 • Welcome to China • Bienvenue en Chine<br />
				Willkommen in China • Добро пожаловать в Китай
			</p>
		</div>

		<!-- footer links -->
		<div class="flex justify-center items-center mt-6 gap-6 text-sm">
			<a href="/tools/" class="text-base-700 hover:text-primary-600 transition-colors underline">Tips</a>
			<a href="/privacy-policy/" class="text-base-700 hover:text-primary-600 transition-colors underline">Privacy</a>
			<a href="/terms-of-use/" class="text-base-700 hover:text-primary-600 transition-colors underline">Terms</a>
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			&copy; {today.getFullYear()} by
			<a
				class="hover:text-primary-600 transition"
				target="_blank"
				rel="noopener"
			>
				WENDY
			</a>
		</div>
	</div>
</footer>
