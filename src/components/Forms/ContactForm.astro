---
import Button from "@components/Button/Button.astro";
---

<form
  action="https://formsubmit.co/wendy7756@outlook.com"
  method="POST"
  class="flex h-full flex-col justify-between gap-4"
>
  <input type="hidden" name="form-name" value="contact" />

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label for="contact-name" class="font-medium text-base-700 mb-2 block">Name</label>
      <input type="text" class="form__input" name="name" id="contact-name" required />
    </div>

    <div>
      <label for="contact-email" class="font-medium text-base-700 mb-2 block">Email</label>
      <input
        type="email"
        class="form__input"
        name="email"
        id="contact-email"
        inputmode="email"
        required
      />
    </div>
  </div>

  <div>
    <label for="contact-message" class="font-medium text-base-700 mb-2 block">Message</label>
    <textarea
      name="message"
      class="form__input"
      id="contact-message"
      rows="5"
      placeholder="Tell us about your travel plans, interests, or any specific questions..."
      required
    ></textarea>
  </div>

  <div class="flex">
    <Button variant="primary" type="submit" class="w-full px-8 py-3">Send My Inquiry</Button>
  </div>
</form>


