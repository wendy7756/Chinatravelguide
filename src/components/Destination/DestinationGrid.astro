---
import DestinationCard from "@components/DestinationCard/DestinationCard.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
	destinations: CollectionEntry<"destinations">[];
}

const { destinations } = Astro.props;

const sortedDestinations = destinations.sort((a, b) => {
	if (a.data.order < b.data.order) return -1;
	if (a.data.order > b.data.order) return 1;
	return 0;
});
---

<div class="grid gap-8 pt-12 md:grid-cols-2 lg:grid-cols-3">
	{sortedDestinations.map((destination) => (
		<DestinationCard destination={destination} />
	))}
</div> 